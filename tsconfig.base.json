        "libs/orisirisi-error-handling/src/index.ts"
      ],
      "@orisirisi/orisirisi-web-ui": ["libs/orisirisi-web-ui/src/index.ts"],
      "@orisirisi/orisirisi-web3": ["libs/orisirisi-web3/src/index.ts"],
      "@orisirisi/orisirisi-web3-chains": [
        "libs/orisirisi-web3-chains/src/index.ts"
